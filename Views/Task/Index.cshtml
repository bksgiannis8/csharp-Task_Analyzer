@{
    ViewData["Title"] = "Home";
}

<section class="py-2">
    <div class="container">
        @* Page Title *@
        <div class="d-flex justify-content-between">
            <h3 class="fw-bold">Tasks</h3>
            <a class="btn btn-dark" asp-controller="Task" asp-action="Index">
                Add New Task
            </a>
        </div>
        @* All Tasks *@
        <div class="all-tasks mt-4 px-2">
            @* Card *@
            <div class="card">
                @* Card Header *@
                <div class="d-flex justify-content-between align-items-center pb-2">
                    <span>Finish propject proposal</span>
                    <span class="card-pill">Due Today</span>
                </div>
                @* Card Body *@
                <div>
                    <p class="text-muted">Prepare the project proposal for the client meeting.</p>
                </div>
                @* Card Footer *@
                <div class="d-flex justify-content-between align-items-center">
                    <span class="card-pill">Pending</span>
                    <div>
                        <span class="cursor-pointer">Mark as complete</span>
                        <span></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
